<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:columnCount="2"
    android:rowCount="2"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnAddConsulta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/btn_background"
        android:drawableTop="@drawable/ic_add"
        android:gravity="center"
        android:text="Adicionar Consulta"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnListPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:background="@drawable/btn_background"
        android:drawableTop="@drawable/list_paciente"
        android:gravity="center"
        android:text="Listar Pacientes"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAddPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:background="@drawable/btn_background"
        android:drawableTop="@drawable/ic_add_patient"
        android:gravity="center"
        android:text="Adicionar Paciente"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:background="@drawable/btn_background"
        android:drawableTop="@drawable/ic_notifications"
        android:gravity="center"
        android:text="Notificações"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</GridLayout>
